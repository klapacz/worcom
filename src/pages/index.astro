---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import PortfolioCard from "../components/PortfolioCard.astro";

const allPortfolios = await getCollection("portfolio");
---

<Layout title="Welcome to Astro.">
  <div class="container py-10">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-9 md:gap-y-11 lg:gap-y-16 lg:gap-x-8"
    >
      {allPortfolios.map((portfolio) => <PortfolioCard {...portfolio} />)}
    </div>
  </div>
</Layout>
